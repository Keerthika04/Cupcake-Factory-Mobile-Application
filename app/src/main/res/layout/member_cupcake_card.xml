<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/memberCupcakeView"
    android:layout_width="wrap_content"
    android:layout_height="220dp"
    android:layout_margin="3sp"
    android:clickable="true"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:id="@+id/memberCupcakeViewlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="8dp"
            app:cardElevation="0dp">

            <ImageView
                android:id="@+id/cartCupcakeImg"
                android:layout_width="160dp"
                android:layout_height="155dp"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/cupcake_logo" />

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:id="@+id/cupcakeContent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="5dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingStart="8sp"
            android:paddingTop="5dp"
            android:paddingEnd="8sp"
            android:paddingBottom="5dp">

            <LinearLayout
                android:id="@+id/cupcakeDetails"
                android:layout_width="119dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/cartCupcakeName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="TextView \n hjh "
                    android:textColor="@color/cardview_dark_background"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/cartCupcakePrice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="TextView"
                    android:textColor="@color/brown"
                    android:textSize="12sp" />
            </LinearLayout>

            <ImageView
                android:id="@+id/wishlist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/favourite" />

        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>