<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="5dp"
    android:layout_marginVertical="5dp"
    android:layout_marginBottom="28dp"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="8dp">

    <LinearLayout
        android:id="@+id/adminOrderList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:background="#fff"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/adminOrdeDetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img"
                android:layout_width="95dp"
                android:layout_height="match_parent"
                android:layout_weight="0"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/person" />

            <LinearLayout
                android:layout_width="226dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#FFFFFF"
                android:gravity="center|right|top"
                android:orientation="vertical"
                android:paddingTop="8dp">

                <TextView
                    android:id="@+id/cupcakeName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="3sp"
                    android:paddingLeft="5sp"
                    android:paddingRight="5sp"
                    android:text="Order No   : 0112025"
                    android:textColor="@color/darkBrown"
                    android:textSize="10sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/adminOrderUsername"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="3sp"
                    android:paddingLeft="5sp"
                    android:paddingRight="5sp"
                    android:text="Username : 0112025"
                    android:textColor="@color/darkBrown"
                    android:textSize="10sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/adminOrderPriceTotal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="3sp"
                    android:background="@color/beige"
                    android:paddingLeft="5sp"
                    android:paddingRight="5sp"
                    android:text="Total           : 4450rs/-"
                    android:textColor="@color/darkBrown"
                    android:textSize="10sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/cupcakeQuantity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="3sp"
                    android:paddingLeft="5sp"
                    android:paddingRight="5sp"
                    android:text="Quantity"
                    android:textColor="@color/darkBrown"
                    android:textSize="10sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/orderProcessStatus"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:paddingStart="5sp"
                    android:paddingEnd="5sp"
                    android:paddingBottom="5sp"
                    android:text="Status"
                    android:textSize="12sp"
                    android:textStyle="bold" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/adminOrderProcessButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/beige"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/rejectBtn"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="4dp"
                android:background="@drawable/circle2"
                android:padding="8dp"
                app:srcCompat="@drawable/reject" />

            <ImageView
                android:id="@+id/processingBtn"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="4dp"
                android:background="@drawable/circle2"
                android:padding="12dp"
                app:srcCompat="@drawable/pending" />

            <ImageView
                android:id="@+id/outForDeliveryBtn"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="4dp"
                android:background="@drawable/circle2"
                android:padding="8dp"
                app:srcCompat="@drawable/deliver" />

            <ImageView
                android:id="@+id/CompletedBtn"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="4dp"
                android:background="@drawable/circle2"
                android:padding="8dp"
                app:srcCompat="@drawable/accept" />
        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>