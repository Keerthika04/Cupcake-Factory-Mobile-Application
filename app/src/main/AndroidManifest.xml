<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-feature
        android:name="android.hardware.camera"
        android:required="false" />

    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE"/>
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/cupcake_logo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/cupcake_logo"
        android:supportsRtl="true"
        android:theme="@style/Theme.CupcakeApp"
        tools:targetApi="31">
        <activity
            android:name=".LoginActivity"
            android:exported="false" />
        <activity
            android:name=".SignupActivity"
            android:exported="false" />
        <activity
            android:name=".AdminHomeActivity"
            android:exported="false" />
        <activity
            android:name=".AdminCategoryActivity"
            android:exported="false" />
        <activity
            android:name=".AdminCupcakeActivity"
            android:exported="false" />
        <activity
            android:name=".MemberHomeActivity"
            android:exported="false" />
        <activity
            android:name=".CupcakeDetailActivity"
            android:exported="false" />
        <activity
            android:name=".CategoryDetailActivity"
            android:exported="false" />
        <activity
            android:name=".AdminOrdersActivity"
            android:exported="false" />
        <activity
            android:name=".CartActivity"
            android:exported="false"/>
        <activity
            android:name=".MemberOrderActivity"
            android:exported="false"/>
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>